numero = int(input('Numero: '))


match numero:
    case x if x % 2 == 0:
        print('par')
    case _:
        print('impar')

pn = int(input('Numero: '))

match pn:
    case x if x > 0:
        print('é positivo')
    case x if x == 0:
        print('é zero')
    case _:
        print('é negativo')

st = input('Escreva algo ou nao escreva nada: ')

match st:
    case x if x == '':
        print('Não há nada dentro dessa string')
    case _:
        print('há algo escrito dentro dessa string')

nu = int(input('Digite um numero: '))

match nu:
    case x if x >= 10:
        print('seu numero é maior ou igual a dez')
    case _:
        print('seu numero é menor que dez')






idade = int(input('digite sua idade: '))

match idade: 
    case x if x <= 12:
        print('criança')
    case x if x <= 17:
        print('adolecente')
    case x if x <= 35:
        print('Jovem')
    case x if x <= 64:
        print('Adulto')
    case x if x >= 65:
        print('Idoso')
